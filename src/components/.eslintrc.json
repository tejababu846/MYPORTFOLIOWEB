{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
         "quotes": ["error", "single"],
     
      "no-console": "off", // You may want to turn off or adjust this rule based on your needs
      "react/prop-types": "off", // If you're not using PropTypes, you can turn off this rule
      "react/react-in-jsx-scope": "off" // If you're using React 17+, you can turn off this rule
      // Add more rules as per your requirements
    }
  }
  